<% provide :title, t("pages.home.title") %>
<section class="row top-banner">
  <div class="color-overlay"></div>
  <div class="container">
    <h1>Fastest way to build your store in Korea</h1>
    <p>ShopStory can help you to launch your online store in no time. Start your journey today!</p>
    <%= form_tag new_merchant_registration_path, method: :get, class: "form-inline" do |f| %>
      <%= text_field_tag :shop_name, nil, placeholder: t("pages.home.shop_name"),
        class: "form-control input-lg" %>
      <%= submit_tag t("buttons.get_started"), class: "btn btn-lg btn-inline btn-danger"%>
    <% end %>
  </div>
</section>
