<% provide :title, t("pages.home.title") %>
<section class="top-banner">
  <div class="color-overlay"></div>
  <div class="container">
    <h1>Fastest way to build your store in Korea</h1>
    <p>ShopStory can help you to launch your online store in no time. Start your journey today!</p>
    <%= form_tag "#", method: :post, class: "form-inline" do |f| %>
      <%= text_field_tag :store_name, nil, placeholder: t("pages.home.store_name"),
        class: "form-control input-lg" %>
      <%= submit_tag t("buttons.get_started"), class: "btn btn-lg btn-inline btn-success"%>
    <% end %>
  </div>
</section>
