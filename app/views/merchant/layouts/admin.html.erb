<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag "merchant/application", media: "all", "data-turbolinks-track": true %>
    <%= javascript_include_tag "merchant/application", "data-turbolinks-track": true %>
    <%= javascript_include_tag "http://dmaps.daum.net/map_js_init/postcode.v2.js", "data-turbolinks-track": true %>
    <%= csrf_meta_tags %>

    <%= javascript_tag do %>
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    <% end %>
  </head>
  <body>
    <aside class="left-panel">
      <%= render "merchant/layouts/side_bar" %>
    </aside>
    <section class="content">
      <%= render "merchant/layouts/top_bar" %>
      <div class="container-fluid main-wrapper">
        <%= yield %>
      </div>
    </section>

    <% if Rails.env.development? %>
      <%= intercom_script_tag({
        user_id: current_merchant.id,
        email: current_merchant.email,
        name: "#{current_merchant.first_name} #{current_merchant.last_name}",
        created_at: current_merchant.created_at,
        custom_data: {
          plan: current_merchant.subscription.try(:plan).try(:name)
        }
      }) %>
    <% end %>
  </body>
</html>
