<%= form_for [:admin, @payment_method], as: :payment_method, url: admin_payment_method_path(@payment_method) do |f| %>
  <%= render "admin/shared/form_errors", object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= image_tag f.object.image.thumb.url %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit :save, class: "btn btn-primary" %>
  </div>
<% end %>
