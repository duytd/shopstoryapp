<div class="content-box-large">
  <div class="panel-heading">
    <h3><%= t "admin.plans.index.title" %></h3>
    <%= link_to t("admin.buttons.add"), new_admin_plan_path, class: "btn btn-primary" %>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th><%= t :id %></th>
          <th><%= t :name %></th>
          <th><%= t :interval %></th>
          <th><%= t :price %></th>
          <th><%= t :stripe_id %></th>
          <th><%= t :features %></th>
          <th><%= t :position %></th>
          <th><%= t :highlight %></th>
          <th></th>
          <th></th>
        </tr>

        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.id %></td>
            <td><%= plan.name %></td>
            <td><%= plan.interval %></td>
            <td><%= plan.price %></td>
            <td><%= plan.stripe_id %></td>
            <td><%= plan.features.truncate(20) unless plan.features.blank? %></td>
            <td><%= plan.position %></td>
            <td><%= plan.highlight %></td>
            <td><%= link_to t("admin.buttons.edit"), edit_admin_plan_path(plan), class: "btn btn-primary" %></td>
            <td><%= link_to t("admin.buttons.delete"), admin_plan_path(plan), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
