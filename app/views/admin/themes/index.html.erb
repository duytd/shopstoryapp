<div class="content-box-large">
  <div class="panel-heading">
    <h3><%= t "admin.themes.index.title" %></h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th><%= t :id %></th>
          <th><%= t :image %></th>
          <th><%= t :name %></th>
          <th><%= t :description %></th>
          <th><%= t :directory %></th>
          <th><%= t :actived %></th>
          <th></th>
          <th></th>
        </tr>

        <% @themes.each do |theme| %>
          <tr>
            <td><%= theme.id %></td>
            <td><%= image_tag theme.image.thumb.url, height: 100 %></td>
            <td><%= theme.name %></td>
            <td><%= theme.description %></td>
            <td><%= theme.directory %></td>
            <td><%= theme.actived %></td>
            <td><%= link_to t("admin.buttons.edit"), edit_admin_theme_path(theme), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<% if @stalled_themes.size > 0 %>
  <div class="content-box-large">
    <div class="panel-heading">
      <h3><%= t "admin.themes.index.pending_title" %></h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table">
          <tr>
            <th><%= t :name %></th>
            <th><%= t :directory %></th>
            <th><%= t :description %></th>
            <th><%= t :author %></th>
            <th><%= t :version %></th>
            <th></th>
          </tr>

          <% @stalled_themes.each do |theme| %>
            <tr>
              <td><%= theme[:name] %></td>
              <td><%= theme[:directory] %></td>
              <td><%= theme[:description] %></td>
              <td><%= theme[:author] %></td>
              <td><%= theme[:version] %></td>
              <td><%= link_to t("admin.buttons.install"), install_admin_themes_path(directory: theme[:directory]), class: "btn btn-primary", method: :post  %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% end %>
