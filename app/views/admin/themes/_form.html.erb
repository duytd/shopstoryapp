<%= form_for [:admin, @theme], html: {multipart: true} do |f| %>
  <%= render "admin/shared/form_errors", object: f.object %>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :directory %>
    <%= f.text_field :directory, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= image_tag f.object.image.thumb.url %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :actived %>
    <%= f.check_box :actived %>
  </div>

  <div class="mb-3">
    <%= f.label :default %>
    <%= f.check_box :default %>
  </div>

  <div class="mb-3">
    <%= f.submit :save, class: "btn btn-primary" %>
  </div>
<% end %>
