<div class="navbar navbar-inverse navbar-shopstory">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target="#navbarCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("application.brand"), root_path, class: "navbar-brand" %>
    </div>

    <div class="navbar-collapse collapse navbar-right" id="navbarCollapse">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t("menu.features"), features_path %>
        </li>
        <li>
          <%= link_to t("menu.pricing"), pricing_path %>
        </li>
        <li>
          <%= link_to t("menu.showcase"), showcase_path %>
        </li>
        <li>
          <%= link_to t("menu.preview"), preview_path %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle"
            data-toggle="dropdown" role="button" aria-haspopup="true"
            aria-expanded="false">
            <%= t "menu.language" %>
            <i class="fa fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to t("menu.korean"), locale: "ko" %>
            </li>
            <li>
              <%= link_to t("menu.english"), locale: "en" %>
            </li>
          </ul>
        </li>
        <% if merchant_signed_in? %>
          <li>
            <%= link_to t("buttons.go_to_store"), merchant_root_url(subdomain: current_merchant.shop.subdomain), 
              class: "btn btn-success" %>
          </li>
        <% else %>
          <li>
            <%= link_to t("menu.login"), new_merchant_session_path %>
          </li>
          <li>
            <%= link_to t("buttons.get_started"), new_merchant_registration_path, class: "btn btn-success" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
