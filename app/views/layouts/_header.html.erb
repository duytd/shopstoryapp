<div class="navbar navbar-custom sticky" role="navigation" id="sticky-nav">
  <div class="container">

    <!-- Navbar-header -->
    <div class="navbar-header">
      <!-- Responsive menu button -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <!-- LOGO -->
      <%= link_to root_path, class: "navbar-brand logo" do %>
        <%= image_tag asset_pack_path("static/images/logo-inverse.png"), placeholder: t("application.brand") %>
      <% end %>
    </div>
    <!-- end navbar-header -->

    <!-- menu -->
    <div class="navbar-collapse collapse" id="navbar-menu">

      <!-- Navbar left -->
      <ul class="nav navbar-nav nav-custom-left">
        <li class="active">
          <a href="<%= root_url %>#home" class="nav-link"><%= t("menu.home") %></a>
        </li>
        <li>
          <a href="<%= root_url %>#features" class="nav-link"><%= t("menu.features") %></a>
        </li>
      </ul>

      <!-- Navbar right -->
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= t "menu.language" %>
            <i class="fa fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to t("menu.korean"), locale: "ko" %>
            </li>
            <li>
              <%= link_to t("menu.english"), locale: "en" %>
            </li>
          </ul>
        </li>
        <% if merchant_signed_in? %>
          <li>
            <%= link_to t("buttons.go_to_store"), merchant_root_url(subdomain: current_merchant.shop.subdomain),
              class: "btn btn-danger" %>
          </li>
        <% else %>
          <li>
            <%= link_to t("menu.login"), new_merchant_session_path %>
          </li>
          <li>
            <%= link_to t("buttons.get_started"), new_merchant_registration_path, class: "btn btn-white-fill navbar-btn" %>
          </li>
        <% end %>
      </ul>
    </div>
    <!--/Menu -->
  </div>
  <!-- end container -->
</div>
<!-- End navbar-custom -->
