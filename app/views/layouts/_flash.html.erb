<div id="flash">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> text-center alert-dismissible fade show" role="alert">
      <ul>
        <% if value == t("devise.failure.unconfirmed") %>
          <li><%= value %> Please check your spam folder as well. <a href='/verification/new'>Didn't receive confirmation instructions?</a></li>
        <% else %>
          <li><%= value %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
