<div class="form login col-md-6 col-md-offset-3">
  <% if resource.class.name == "Merchant" %>
    <h1 class="text-center"><%= t("merchant.login.title") %></h1>
  <% end %>

  <% if resource.class.name == "Admin" %>
    <h1 class="text-center"><%= t("admin.login.title") %></h1>
  <% end %>

  <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <div class="mb-3">
      <%= render "shared/form_errors", object: f.object %>
    </div>
    <div class="mb-3">
      <%= f.email_field :email, autofocus: true, placeholder: t("merchant.registrations.email"),
        class: "form-control input-lg" %>
    </div>

    <div class="mb-3 password">
      <%= f.password_field :password, autocomplete: "off", placeholder: t("merchant.registrations.password"),
        class: "form-control input-lg" %>
      <%= link_to t("merchant.login.forgot"), new_password_path(resource_name) %>
    </div>

    <div class="mb-3 remember-password">
      <% if devise_mapping.rememberable? %>
        <%= f.label :remember_me, class: "styled-cb" do %>
          <%= f.check_box :remember_me %>
          <i class="fa"></i>
          <%= t "merchant.login.remember_me" %>
        <% end %>
      <% end %>
      <%= f.submit t("merchant.login.submit"), class: "btn btn-lg btn-danger pull-right" %>
    </div>
  <% end %>
</div>
