<div class="home bg-img-2">
  <div class="container px-4 py-5">
    <div class="row align-items-center g-5 py-5">
      <div class="col-sm-8 col-lg-7">
        <h1 class="display-3 fw-bold lh- mb-3 text-light">SELL YOUR AMAZING CRAFTS IN MINUTES</h1>
        <p class="lead fw-normal text-light">Shopstory helps local creators and small businesses launch a fully featured online stores in minutes</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <% if merchant_signed_in? %>
            <%= link_to t("buttons.go_to_store"), merchant_root_url(subdomain: current_merchant.shop.subdomain),
              class: "btn btn-lg btn-success px-4 me-md-2 mt-3" %>
          <% else %>
            <%= form_tag new_merchant_registration_path, method: :get do |f| %>
              <%= text_field_tag :shop_name, nil, placeholder: t("pages.home.shop_name"),
                class: "form-control" %>
              <%= submit_tag t("buttons.get_started"), class: "btn btn-lg btn-success px-4 me-md-2 mt-3"%>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
