<!-- Templates -->
<% if Rails.env.development? %>
  <%= javascript_pack_tag "customer/themes/#{current_theme.directory}/templates/template", "data-turbolinks-track": true %>
<% else %>
  <%= javascript_include_tag customer_templates_path, "data-turbolinks-track": true %>

  <%= javascript_pack_tag "customer/application", "data-turbolinks-track": true %>
<% end %>


<!-- Custom Javascripts -->
<% if Rails.env.staging? || Rails.env.production? %>
  <%= javascript_include_tag customer_scripts_path, "data-turbolinks-track": true %>
  <%= javascript_include_tag customer_locale_path, "data-turbolinks-track": true %>
<% end %>

