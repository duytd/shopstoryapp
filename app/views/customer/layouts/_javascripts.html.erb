<%= javascript_tag do %>
  var Shopstory = {};
  Shopstory.currency = "<%= current_currency %>";
  Shopstory.defaultLocale = "<%= I18n.default_locale %>";
  Shopstory.locale = "<%= I18n.locale %>";
  Shopstory.rate = "<%= current_shop.exchange_rate.blank? ? 1000 : current_shop.exchange_rate %>";
<% end %>

<%= javascript_include_tag customer_locale_path %>

<!-- Templates -->
<% if Rails.env.development? %>
  <%= javascript_pack_tag "customer/themes/#{current_theme.directory}/templates/template" %>
<% else %>
  <%= javascript_include_tag customer_templates_path %>

  <%= javascript_pack_tag "customer/application" %>
<% end %>


<!-- Custom Javascripts -->
<% if Rails.env.staging? || Rails.env.production? %>
  <%= javascript_include_tag customer_scripts_path %>
<% end%>
