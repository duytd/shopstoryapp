<div className="variation-selector">
  <p rt-repeat="option in this.state.options" key="option_{optionIndex}">
    <select onChange="{this.updateVariation.bind(this, option.id)}" defaultValue="{option.default}" ref="option_{option.id}">
      <option rt-repeat="value in option.option_values" key="option_value_{valueIndex}" value="{value.id}">
        {value.name}
      </option>
    </select>
  </p>
</div>
