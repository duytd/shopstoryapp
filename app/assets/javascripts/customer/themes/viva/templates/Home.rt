<Layout globalVars="{this.props.globalVars}" updateCart="{this.updateCart}">
  <div class="home">
    <Banner rt-if="this.props.banner" bannerItems="{this.props.banner.banner_items}" />
    <h2 rt-if="this.props.products.length > 0">{I18n.t("products.featured_products")}</h2>
    <ProductList products="{this.props.products}" currency="{this.props.globalVars.currency}" />
  </div>
</Layout>
